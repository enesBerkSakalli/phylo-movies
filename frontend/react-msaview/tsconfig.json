{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext", 
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "dist",
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "react-jsx"
  },
  "include": ["src", "src/**/*"],
  "exclude": ["**/*.test.ts", "**/*.test.tsx", "node_modules"]
}