{
  "name": "phylo-movies-desktop",
  "version": "0.64.0",
  "description": "Phylo-Movies Desktop Application - Electron wrapper",
  "author": "Enes Berk Sakalli <enes.sakalli@univie.ac.at>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/enesBerkSakalli/phylo-movies.git"
  },
  "main": "main.js",
  "private": true,
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "setup:backend": "cd BranchArchitect && poetry install",
    "build:frontend": "cd .. && ELECTRON_BUILD=true npm run build && rm -rf electron-app/frontend-dist && cp -r dist electron-app/frontend-dist",
    "build:backend": "cd BranchArchitect && poetry export -f requirements.txt --output requirements.txt --without-hashes && poetry run pip install pyinstaller && poetry run pyinstaller brancharchitect.spec --noconfirm --clean",
    "build:mac": "npm run build:backend && npm run build:frontend && electron-builder --mac",
    "build:win": "npm run build:backend && npm run build:frontend && electron-builder --win",
    "build:linux": "npm run build:backend && npm run build:frontend && electron-builder --linux",
    "dist": "npm run build:mac"
  },
  "dependencies": {},
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0"
  },
  "build": {
    "appId": "com.phylomovies.app",
    "productName": "Phylo-Movies",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "enesBerkSakalli",
        "repo": "phylo-movies"
      }
    ],
    "files": [
      "main.js",
      "preload.js",
      "splash-preload.js",
      "splash.html",
      "frontend-dist/**/*"
    ],
    "extraResources": [
      {
        "from": "BranchArchitect/dist/brancharchitect-server/",
        "to": "BranchArchitect/brancharchitect-server/",
        "filter": [
          "**/*"
        ]
      }
    ],
    "mac": {
      "category": "public.app-category.education",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "category": "Science"
    }
  }
}
